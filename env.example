# ===========================================
# AI Voice Agent - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# -------------------------------------------
# SignalWire Configuration
# -------------------------------------------
SIGNALWIRE_PROJECT_ID=your_project_id_here
SIGNALWIRE_API_TOKEN=your_api_token_here
SIGNALWIRE_SPACE_URL=your-space.signalwire.com
SIGNALWIRE_SIGNING_KEY=your_signing_key_here

# -------------------------------------------
# ElevenLabs Voice (Optional)
# -------------------------------------------
ELEVEN_LABS_VOICE_ID=Gqe8GJJLg3haJkTwYj2L

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=ai_voice_agent

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------
# Transfer Queue DIDs (3-Tier Routing)
# -------------------------------------------
# High tier: Total unsecured debt >= $35,000
QUEUE_HIGH_DID=+1234567890
# Mid tier: Total unsecured debt $10,000 - $34,999
QUEUE_MID_DID=+1234567891
# Low tier: Total unsecured debt < $10,000
QUEUE_LOW_DID=+1234567892

# Legacy (kept for backwards compatibility)
QUEUE_A_DID=+1234567890
QUEUE_B_DID=+1234567891

# -------------------------------------------
# Twilio SIP Trunk (for transfers)
# -------------------------------------------
TWILIO_SIP_TRUNK=sip:trunk@your-twilio.pstn.twilio.com
TWILIO_SIP_USERNAME=
TWILIO_SIP_PASSWORD=
TWILIO_SIP_DOMAIN=

# -------------------------------------------
# OCC CRM Configuration (Optional - for future use)
# -------------------------------------------
OCC_CRM_API_URL=https://api.occcrm.com/v1
OCC_CRM_API_KEY=your_crm_api_key_here

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_HOST=0.0.0.0
APP_PORT=8000
WEBHOOK_BASE_URL=https://your-app.railway.app
DEBUG=false

# -------------------------------------------
# Authentication
# -------------------------------------------
SECRET_KEY=your_very_secure_secret_key_at_least_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180

# -------------------------------------------
# Testing
# -------------------------------------------
DISABLE_AGENT_AUTH=false

